---
import type { CollectionEntry } from 'astro:content';

interface Props {
  project: CollectionEntry<'projects'>;
  Content: astroHTML.JSX.Element;
}

const { project, Content } = Astro.props;
const { title, description, tech, category, liveUrl, githubUrl, image, date } = project.data;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="project-detail">
  {image && (
    <div class="project-image">
      <img src={image} alt={title} />
    </div>
  )}

  <header class="project-header">
    <span class="project-category accent">{category}</span>
    <h2>{title}</h2>
    <p class="project-description">{description}</p>
    <time datetime={date.toISOString()}>{formattedDate}</time>
  </header>

  <div class="project-tech-stack">
    <h4>Tech Stack</h4>
    <div class="tech-tags">
      {tech.map((t) => (
        <span class="tech-tag">{t}</span>
      ))}
    </div>
  </div>

  {(liveUrl || githubUrl) && (
    <div class="project-links">
      {liveUrl && (
        <a href={liveUrl} target="_blank" rel="noopener noreferrer" class="btn">
          View Live
        </a>
      )}
      {githubUrl && (
        <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="btn btn-outline">
          View Source
        </a>
      )}
    </div>
  )}

  <div class="project-body">
    <Content />
  </div>
</article>

<style>
  .project-detail {
    color: var(--color-text);
  }

  .project-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    margin-bottom: 2rem;
  }

  .project-header {
    margin-bottom: 2rem;
  }

  .project-category {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: block;
    margin-bottom: 0.5rem;
  }

  .project-header h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .project-description {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--color-text-secondary);
  }

  .project-header time {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .project-tech-stack {
    margin-bottom: 2rem;
  }

  .project-tech-stack h4 {
    font-size: 1rem;
    margin-bottom: 0.75rem;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    font-size: 0.875rem;
    padding: 0.375rem 0.75rem;
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .project-body {
    border-top: 1px solid var(--color-border);
    padding-top: 2rem;
  }

  .project-body :global(h2) {
    font-size: 1.75rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .project-body :global(h3) {
    font-size: 1.5rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .project-body :global(p) {
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: var(--color-text-secondary);
  }

  .project-body :global(img) {
    max-width: 100%;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .project-body :global(ul),
  .project-body :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .project-body :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
  }

  @media (max-width: 768px) {
    .project-header h2 {
      font-size: 2rem;
    }

    .project-description {
      font-size: 1.125rem;
    }
  }
</style>

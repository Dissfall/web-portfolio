</Layout>

<style>
  .about-hero {
    padding-top: 6rem;
  }

  .lead {
    font-size: 1.25rem;
    line-height: 1.8;
    max-width: 800px;
    color: var(--color-text-secondary);
  }

  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-border);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 2rem;
    padding-left: 2rem;
  }

  .timeline-marker {
    position: absolute;
    left: -2rem;
    top: 0.5rem;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--color-yellow);
    border: 3px solid var(--color-bg);
    z-index: 1;
  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .timeline-period {
    font-size: 0.875rem;
    font-weight: 600;
  }

  .timeline-content h3 {
    margin: 0;
  }

  .timeline-content h4 {
    margin: 0 0 1rem 0;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .focus-list {
    display: grid;
    gap: 1.5rem;
  }

  .focus-item {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .focus-number {
    font-size: 2rem;
    font-weight: 700;
    flex-shrink: 0;
  }

  .focus-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .focus-item h3,
  .focus-item h4 {
    margin: 0 0 0.5rem 0;
  }

  .focus-item p {
    margin: 0;
  }

  .making-story,
  .activism-story,
  .activism-impact {
    margin-bottom: 4rem;
  }

  .making-story h3,
  .activism-story h3,
  .activism-impact h3 {
    margin-top: 0;
  }

  .making-story p,
  .activism-story p,
  .activism-impact p {
    margin-bottom: 1rem;
  }

  .making-story p:last-child,
  .activism-story p:last-child,
  .activism-impact p:last-child {
    margin-bottom: 0;
  }

  .accent-link {
    color: var(--color-yellow);
    font-weight: 600;
    text-decoration: none;
    border-bottom: 2px solid var(--color-yellow);
    transition: opacity 0.2s ease;
  }

  .accent-link:hover {
    opacity: 0.8;
  }

  .values-section {
    margin-bottom: 4rem;
  }

  .values-section h3 {
    margin-bottom: 2rem;
  }

  .values-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
  }

  .value-item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 50px;
  }

  .value-icon {
    font-size: 1.25rem;
    line-height: 1;
  }

  .value-item h4 {
    margin: 0;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .interests-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .interest-card {
    text-align: center;
  }

  .interest-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .interest-card h3 {
    margin: 0 0 0.5rem 0;
  }

  .interest-card p {
    margin: 0;
  }

  @media (max-width: 768px) {
    .timeline {
      padding-left: 1.5rem;
    }

    .timeline-item {
      padding-left: 1.5rem;
    }

    .timeline-marker {
      left: -1.75rem;
    }

    .timeline-header {
      flex-direction: column;
      gap: 0.25rem;
    }

    .values-grid {
      gap: 0.5rem;
    }

    .value-item {
      padding: 0.5rem 1rem;
      font-size: 0.8125rem;
    }

    .interests-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

